<Window x:Class="RaceStore.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceStore"
        mc:Ignorable="d"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Авторизация" Height="450" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Background="Azure">
        <materialDesign:Card Margin="300,50,300,60">
            <StackPanel>
                <Label Content="Авторизация" HorizontalAlignment="Center" FontSize="20" Foreground="LimeGreen" FontWeight="Bold" Margin="0,15,0,0"/>
                <TextBox x:Name="LoggTb" Margin="15,50,15,10" materialDesign:HintAssist.Hint="Логин" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <PasswordBox x:Name="PassTb" Margin="15,0,15,10" materialDesign:HintAssist.Hint="Password" Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"/>
                <Button Margin="15,20,15,10"  Content="Войти" Foreground="White" FontSize="16" Click="Button_Click" />
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
