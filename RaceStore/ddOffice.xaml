<Window x:Class="RaceStore.ddOffice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceStore"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Добавить филиал" Height="450" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Background="Azure">
        <materialDesign:Card Margin="200,40,200,30">
            <StackPanel>
                <Label Content="Создать филиал" HorizontalAlignment="Center" FontSize="20" Foreground="LimeGreen" FontWeight="Bold" Margin="0,15,0,0"/>
                <TextBox Width="300" x:Name="OfficeTitleTb" Margin="15,10,15,0" materialDesign:HintAssist.Hint="Название" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBox Width="200" x:Name="StorageTitleTb" Margin="0,10,10,0" materialDesign:HintAssist.Hint="Название склада" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        <TextBox Width="200" x:Name="CityTb" Margin="0,10,10,0" materialDesign:HintAssist.Hint="Город" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        <TextBox Width="200" x:Name="StreetTb" Margin="0,10,10,0" materialDesign:HintAssist.Hint="Улица" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBox Width="200" x:Name="NunhomeTb" Margin="10,10,10,0" materialDesign:HintAssist.Hint="Дом" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        <TextBox Width="200" x:Name="NumkvTb" Margin="10,10,10,0" materialDesign:HintAssist.Hint="Квартира" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        <TextBox Width="200" x:Name="PindexTb" Margin="0,10,0,0" materialDesign:HintAssist.Hint="Индекс" Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        <StackPanel Orientation="Horizontal" >
                            <Button Margin="10,10,10,0" Width="95" Content="Создать" Foreground="White" FontSize="16" Click="Button_Click"/>
                            <Button Margin="0,10,0,0" Width="95"  Content="Отмена" Foreground="White" FontSize="16" IsCancel="True"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>
