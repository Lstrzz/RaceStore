<Window x:Class="RaceStore.EdtStatusOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceStore"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Изменение товара" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Label Content="Изменение Статус" HorizontalAlignment="Center" FontSize="20" Foreground="LimeGreen" FontWeight="Bold" Margin="0,15,0,0"/>
        <ComboBox x:Name="StatuseTb" Margin="0,10,0,0" Width="220" DisplayMemberPath="StatuseTitle" materialDesign:HintAssist.Hint="Cтатус" Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
        <Button Margin="20,10,20,0"  Content="Изменить" Foreground="White" FontSize="16" Click="Button_Click"/>
        <Button Margin="20,10,20,0" Width="100" Content="Отмена" Foreground="White" FontSize="16" IsCancel="True"/>
    </StackPanel>
</Window>
